@model mvc.Models.Event.CreateViewModel

@{
    ViewData["Title"] = "Créer un Événement";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-calendar-plus"></i> Créer un Nouvel Événement</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Title" class="fw-bold"><i class="bi bi-card-heading"></i> Titre</label>
                    <input asp-for="Title" class="form-control" placeholder="Entrez le titre de l'événement" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="fw-bold"><i class="bi bi-textarea-resize"></i> Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Entrez la description de l'événement"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6 mb-3">
                        <label asp-for="EventDate" class="fw-bold"><i class="bi bi-calendar"></i> Date et Heure</label>
                        <input asp-for="EventDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6 mb-3">
                        <label asp-for="MaxParticipants" class="fw-bold"><i class="bi bi-people"></i> Participants Maximum</label>
                        <input asp-for="MaxParticipants" class="form-control" placeholder="Nombre maximum de participants" />
                        <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Location" class="fw-bold"><i class="bi bi-geo-alt"></i> Lieu</label>
                    <input asp-for="Location" class="form-control" placeholder="Entrez le lieu de l'événement" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Créer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
