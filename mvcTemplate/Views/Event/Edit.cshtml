@model mvc.Models.Event.EditViewModel

@{
    ViewData["Title"] = "Modifier l'Événement";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Modifier l'Événement</h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">
                        <i class="bi bi-card-heading"></i> Titre
                    </label>
                    <input asp-for="Title" class="form-control" placeholder="Entrez le titre de l'événement" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">
                        <i class="bi bi-text-paragraph"></i> Description
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Entrez une description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EventDate" class="form-label fw-bold">
                        <i class="bi bi-calendar"></i> Date de l'événement
                    </label>
                    <input asp-for="EventDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaxParticipants" class="form-label fw-bold">
                        <i class="bi bi-people"></i> Participants Maximum
                    </label>
                    <input asp-for="MaxParticipants" class="form-control" placeholder="Nombre de participants maximum" />
                    <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Location" class="form-label fw-bold">
                        <i class="bi bi-geo-alt"></i> Lieu
                    </label>
                    <input asp-for="Location" class="form-control" placeholder="Entrez le lieu de l'événement" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
