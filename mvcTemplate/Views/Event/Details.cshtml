@model mvc.Models.Event.DetailsViewModel

@{
    ViewData["Title"] = "Détails de l'Événement";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Détails de l'Événement</h3>
        </div>

        <div class="card-body">
            <h4 class="card-title text-primary"><i class="bi bi-card-heading"></i> @Model.Title</h4>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong><i class="bi bi-text-paragraph"></i> Description : </strong>
                    <span>@Model.Description</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-calendar"></i> Date de l'événement : </strong>
                    <span>@Model.EventDate.ToString("f")</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-geo-alt"></i> Lieu : </strong>
                    <span>@Model.Location</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-people"></i> Participants Maximum : </strong>
                    <span>@Model.MaxParticipants</span>
                </li>
                <li class="list-group-item">
                    <strong><i class="bi bi-clock"></i> Date de Création : </strong>
                    <span>@Model.CreatedAt.ToString("g")</span>
                </li>
            </ul>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
            @if (User.IsInRole("Teacher"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Modifier
                </a>
            }
        </div>
    </div>
</div>
