@using mvc.Models.Student
@model DetailsViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">
        <i class="bi bi-person-badge-fill"></i> Détails de l'Étudiant
    </h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <div class="row mb-3">
                <!-- Prénom -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Prénom :</label>
                    <p class="form-control-plaintext">@Model.Firstname</p>
                </div>

                <!-- Nom -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Nom :</label>
                    <p class="form-control-plaintext">@Model.Lastname</p>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Âge -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Âge :</label>
                    <p class="form-control-plaintext">@Model.Age</p>
                </div>

                <!-- Spécialité -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Spécialité :</label>
                    <p class="form-control-plaintext">@Model.Major</p>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Date d'Admission -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Date d'Admission :</label>
                    <p class="form-control-plaintext">@Model.AdmissionDate.ToString("dd/MM/yyyy")</p>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Email :</label>
                    <p class="form-control-plaintext">@Model.Email</p>
                </div>
            </div>

            <div class="row mb-3">
                <!-- GPA -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Moyenne (GPA) :</label>
                    <p class="form-control-plaintext">@Model.GPA</p>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                @if (User.IsInRole("Teacher")){
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle"></i> Retour
                    </a>    
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 ms-2">
                        <i class="bi bi-pencil-square"></i> Modifier
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger px-4 ms-2" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet étudiant ?')">
                        <i class="bi bi-trash"></i> Supprimer
                    </a>
                }
            </div>
        </div>
    </div>
</div>
