@using mvc.Models.Student
@model CreateViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">
        <i class="bi bi-person-plus-fill"></i> Ajouter un Nouveau Étudiant
    </h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <!-- Afficher les erreurs globales ici -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
            }

            <form asp-action="Create" asp-controller="Student" method="post">
                <div class="row mb-3">
                    <!-- Prénom -->
                    <div class="col-md-6">
                        <label asp-for="Firstname" class="form-label fw-bold"></label>
                        <input asp-for="Firstname" class="form-control" placeholder="Entrez le prénom" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>

                    <!-- Nom -->
                    <div class="col-md-6">
                        <label asp-for="Lastname" class="form-label fw-bold"></label>
                        <input asp-for="Lastname" class="form-control" placeholder="Entrez le nom" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Âge -->
                    <div class="col-md-6">
                        <label asp-for="Age" class="form-label fw-bold"></label>
                        <input asp-for="Age" type="number" class="form-control" placeholder="Entrez l'âge" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <!-- Spécialité -->
                    <div class="col-md-6">
                        <label asp-for="Major" class="form-label fw-bold"></label>
                        <input asp-for="Major" class="form-control" placeholder="Entrez la spécialité" />
                        <span asp-validation-for="Major" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Date d'Admission -->
                    <div class="col-md-6">
                        <label asp-for="AdmissionDate" class="form-label fw-bold"></label>
                        <input asp-for="AdmissionDate" type="date" class="form-control" />
                        <span asp-validation-for="AdmissionDate" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="Entrez l'email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Mot de passe -->
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label fw-bold"></label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Entrez le mot de passe" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Confirmation du mot de passe -->
                    <div class="col-md-6">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirmez le mot de passe" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-check-circle"></i> Ajouter
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle"></i> Retour
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
