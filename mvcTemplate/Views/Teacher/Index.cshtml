@using mvc.Models.Teacher
@model IEnumerable<Teacher>

<h1 class="text-center my-4 text-primary">Professeurs</h1>

<p class="text-center mb-4">Voici les infos des professeurs :</p>

<div class="container">
    <table class="table table-hover table-bordered text-center shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Âge</th>
                <th>Spécialité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.Id</td>
                    <td>@teacher.Firstname @teacher.Lastname</td>
                    <td>@teacher.Age</td>
                    <td>@teacher.Major</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning btn-sm me-2" title="Modifier">
                            <i class="bi bi-pencil-square"></i> Modifier
                        </a>
                        <a asp-action="Delete" asp-route-id="@teacher.Id" class="text-danger" title="Supprimer" onclick="return confirm('Voulez-vous vraiment supprimer cet enseignant ?')">
                            <i class="bi bi-trash fs-5"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-4">
        <a asp-area="" asp-controller="Teacher" asp-action="Add" class="btn btn-primary shadow">
            <i class="bi bi-plus-circle"></i> Ajouter un Professeur
        </a>
    </div>
</div>
