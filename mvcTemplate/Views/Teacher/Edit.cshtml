@using mvc.Models.Teacher
@model EditViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4 text-warning">
        <i class="bi bi-pencil-square"></i> Modifier le Professeur
    </h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <!-- Afficher les erreurs uniquement s'il y en a -->
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Any()))
            {
                <div class="alert alert-danger" role="alert">
                    <h5 class="fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Erreurs détectées :</h5>
                    <ul class="mb-0">
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            <form asp-action="Edit" method="post">
                <!-- Champ caché pour l'Id -->
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <!-- Prénom -->
                    <div class="col-md-6">
                        <label asp-for="Firstname" class="form-label fw-bold"></label>
                        <input asp-for="Firstname" class="form-control" placeholder="Entrez le prénom" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>

                    <!-- Nom -->
                    <div class="col-md-6">
                        <label asp-for="Lastname" class="form-label fw-bold"></label>
                        <input asp-for="Lastname" class="form-control" placeholder="Entrez le nom" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Âge -->
                    <div class="col-md-6">
                        <label asp-for="Age" class="form-label fw-bold"></label>
                        <input asp-for="Age" type="number" class="form-control" placeholder="Entrez l'âge" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <!-- Spécialité -->
                    <div class="col-md-6">
                        <label asp-for="Major" class="form-label fw-bold"></label>
                        <input asp-for="Major" class="form-control" placeholder="Entrez la spécialité" />
                        <span asp-validation-for="Major" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="Entrez l'email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-save"></i> Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle"></i> Retour
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
