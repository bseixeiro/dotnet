@model DetailsViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Message d'accueil -->
            <div class="text-center mb-4">
                <h1 class="display-4 text-primary">Bienvenue sur votre espace personnel</h1>
                <p class="lead text-secondary">
                    Retrouvez ici vos informations personnelles.
                </p>
            </div>

            <!-- Carte des informations utilisateur -->
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle"></i> Vos Informations
                    </h3>
                </div>
                <div class="card-body p-4">
                    <table class="table table-hover table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" class="w-25 text-primary">Prénom</th>
                                <td>@Model.Firstname</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-primary">Nom</th>
                                <td>@Model.Lastname</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-primary">Âge</th>
                                <td>@Model.Age</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-primary">Email</th>
                                <td>@Model.Email</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
