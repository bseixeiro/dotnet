@{
    ViewData["Title"] = "Accueil";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <!-- Colonne avec le texte de bienvenue -->
        <div class="col-md-6 text-center mb-4">
            <h1 class="display-3 text-primary fw-bold mb-3">
                <i class="bi bi-house-door-fill me-2"></i> Bienvenue !
            </h1>
            <h4 class="text-muted mb-4">Gérez facilement vos élèves, professeurs et événements.</h4>
            <p class="lead">
                Veuillez vous <strong>connecter</strong> si vous avez déjà un compte ou <strong>inscrivez-vous</strong> pour commencer.
            </p>
        </div>

        <!-- Colonne avec les boutons -->
        <div class="col-md-4">
            <div class="d-grid gap-3">
                <!-- Bouton Se connecter -->
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg d-flex align-items-center justify-content-center">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Se connecter
                </a>

                <!-- Bouton S'inscrire -->
                <a href="@Url.Action("Register", "Account")" class="btn btn-outline-primary btn-lg d-flex align-items-center justify-content-center">
                    <i class="bi bi-person-plus-fill me-2"></i> S'inscrire
                </a>
            </div>
        </div>
    </div>
</div>
