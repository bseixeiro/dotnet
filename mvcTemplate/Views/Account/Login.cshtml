@model LoginViewModel

@{
    ViewData["Title"] = "Se connecter";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Se connecter
                    </h2>
                </div>
                <div class="card-body">
                    <!-- Affichage des erreurs globales -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>

                    <!-- Formulaire -->
                    <form asp-controller="Account" asp-action="Login" method="post" novalidate>
                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="Entrez votre email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Mot de passe -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Entrez votre mot de passe" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Bouton de connexion -->
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-success px-4 me-2">
                                <i class="bi bi-unlock-fill"></i> Se connecter
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary px-4">
                                <i class="bi bi-arrow-left-circle"></i> Retour
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
